@page
@model CleanArchi.Web.Areas.Identity.Pages.Account.Manage.ManageUserModel
@{
    ViewData["Title"] = "Manage User";
    var isAdmin = User.IsInRole(CleanArchi.Infrastructure.Identity.IdentityConstants.ADMIN_ROLE);
}

<h3>@ViewData["Title"]</h3>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Username" class="form-control" disabled />
                <label asp-for="Username" class="form-label"></label>
            </div>
            <div class="form-floating">
                <select class="form-select" name="role" asp-items="Model.Options" aria-label="Choose a Role">
                    <option value="">Choose a Role</option>
                </select>
                <label for="floatingSelect">Select a Role</label>
            </div>

            <button type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>
    @if (!isAdmin)
    {
        <div class="col-md-6">
            <form method="post">
                <input asp-for="Action" value="delete" class="form-control" hidden />
                <button id="delete" type="submit" class="w-100 btn btn-lg btn-danger">Delete</button>
            </form>

        </div>
    }

</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}